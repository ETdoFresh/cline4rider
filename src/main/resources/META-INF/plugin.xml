<idea-plugin>
    <id>com.cline.rider</id>
    <name>Cline for Rider</name>
    <version>1.0.0</version>
    <vendor email="support@cline.com" url="https://cline.com">Cline</vendor>

    <description><![CDATA[
    Cline AI assistant integration for JetBrains Rider.
    ]]></description>

    <depends>com.intellij.modules.rider</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Application-level services -->
        <applicationService serviceImplementation="com.cline.MainApplicationComponent"/>
        <applicationService serviceImplementation="com.cline.ClineMessageHandler"/>

        <!-- Project-level services -->
        <projectService serviceImplementation="com.cline.ui.model.ChatViewModel"/>
        <projectService serviceImplementation="com.cline.tasks.TaskProcessor"/>

        <!-- Tool Windows -->
        <toolWindow id="Cline"
                   secondary="false"
                   icon="AllIcons.Actions.Message"
                   anchor="right"
                   factoryClass="com.cline.ui.ClineToolWindowFactory"/>
    </extensions>

    <actions>
        <!-- Basic actions for Phase 2 -->
        <action id="Cline.NewTask"
                class="com.cline.actions.NewTaskAction"
                text="New Cline Task"
                description="Create a new Cline task">
            <keyboard-shortcut keymap="$default" first-keystroke="control shift C"/>
            <keyboard-shortcut keymap="Mac OS X" first-keystroke="meta shift C"/>
        </action>

        <action id="Cline.ClearChat"
                class="com.cline.actions.ClearChatAction"
                text="Clear Cline Chat"
                description="Clear the current chat history"/>
    </actions>
</idea-plugin>
